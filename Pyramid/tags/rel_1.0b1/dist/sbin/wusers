#!/bin/sh
PATH=/bin:/sbin

[ -z "$1" ] && echo "Usage: $0 [interface]" && exit
if [ -d /proc/net/hostap/$1 ]; then
  ls /proc/net/hostap/$1/*:* 2>/dev/null | grep -c .
  exit
fi

if [ -f /proc/net/madwifi/$1/associated_sta ]; then
  grep -c macaddr /proc/net/madwifi/$1/associated_sta 
  exit
fi

echo "$1: Not an AP"
