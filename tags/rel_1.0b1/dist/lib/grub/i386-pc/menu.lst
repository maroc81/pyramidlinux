timeout 3

serial --device=/dev/ttyS0 --speed=19200 --word=8 --parity=no --stop=1
terminal serial

title Metrix
root (hd0,0)
kernel /boot/vmlinuz-2.6.16-metrix root=/dev/hda1 console=ttyS0,19200n8

title Shell
root (hd0,0)
kernel /boot/vmlinuz-2.6.16-metrix root=/dev/hda1 console=ttyS0,19200n8 init=/bin/bash

